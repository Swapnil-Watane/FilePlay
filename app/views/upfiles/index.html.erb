<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New File Upload", new_upfile_path, class: "btn btn-primary" %>

<br />
<br />

<table class="table table-bordered table-striped">
	<thead>
		<tr>
        	<th>Name</th>
        	<th>Download Link</th>
        	<th>Delete</th>
          <th>Get Tree</th>
      	</tr>
   </thead>

   <tbody>
      <% @upfiles.each do |file| %>
         <tr>
            <td><%= file.name %></td>
            <td><%= link_to "Download File", file.attachment_url %></td>
            <td><%= button_to "Delete", file, method: :delete , class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{file.name}?" %></td>
            <td><%= button_to "Show", file, method: :get, class: "btn btn-success" %></td>
         </tr>
      <% end %>
   </tbody>
   </table>